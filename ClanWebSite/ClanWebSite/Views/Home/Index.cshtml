<!-- portfolio -->
<div class="portfolio" id="gallery">
    <div class="container">
        <div class="agileits-title">
            <h3>Tournaments</h3>
        </div>
        <hr>
        <div>
            @{
                foreach (var tournament in Model.Tournaments.TournamentPromotion)
                {
                    <div class="agileits-title">
                        <h4>@tournament.Title</h4>
                        <hr class="hr-left">
                    </div>
                    <div class="row">
                        @if (tournament.TournamentLeft != null)
                        {
                            <div class="col-md-4">
                                <div class="panel-body">
                                    <div class="tab-content">
                                        <div class="tab-pane fade in active">
                                            <div class="panel panel-default active panel-custom">
                                                <div class="panel-heading">@tournament.TournamentLeft.name</div>
                                                <div class="panel-body">
                                                    <div class="col-md-6">
                                                        <div>
                                                            Status: <span class="text-success">@tournament.TournamentLeft.status</span>
                                                        </div>
                                                        <div>Players: @tournament.TournamentLeft.currentPlayers / @tournament.TournamentLeft.maxPlayers</div>
                                                        <div>
                                                            @tournament.TournamentLeft.realStartDate.ToShortTimeString()
                                                        </div>
                                                    </div>
                                                    <a class="transparent_btn orange pull-right btnClipboard" href="https://link.clashroyale.com/?joinTournament?id= @tournament.TournamentLeft.tag">Join</a>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        }
                        @if (tournament.TournamentMiddle != null)
                        {
                            <div class="col-md-4">
                                <div class="panel-body">
                                    <div class="tab-content">
                                        <div class="tab-pane fade in active">
                                            <div class="panel panel-default panel-custom">
                                                <div class="panel-heading">@tournament.TournamentMiddle.name</div>
                                                <div class="panel-body">
                                                    <div class="col-md-6">
                                                        <div>
                                                            Status: <span class="text-success">@tournament.TournamentMiddle.status</span>
                                                        </div>
                                                        <div>Players: @tournament.TournamentMiddle.currentPlayers / @tournament.TournamentMiddle.maxPlayers</div>
                                                        <div>
                                                            @tournament.TournamentMiddle.realStartDate.ToShortTimeString()
                                                        </div>
                                                    </div>
                                                    <a class="transparent_btn orange pull-right btnClipboard" href="https://link.clashroyale.com/?joinTournament?id= @tournament.TournamentMiddle.tag">Join</a>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        }
                        @if (tournament.TournamentRight != null)
                        {
                            <div class="col-md-4">
                                <div class="panel-body">
                                    <div class="tab-content">
                                        <div class="tab-pane fade in active">
                                            <div class="panel panel-default active panel-custom">
                                                <div class="panel-heading">@tournament.TournamentRight.name</div>
                                                <div class="panel-body">
                                                    <div class="col-md-6">
                                                        <div>
                                                            Status <span class="text-success">@tournament.TournamentRight.status</span>
                                                        </div>
                                                        <div>Players @tournament.TournamentRight.currentPlayers / @tournament.TournamentRight.maxPlayers</div>
                                                        <div>
                                                            @tournament.TournamentRight.realStartDate.ToShortTimeString()
                                                        </div>
                                                    </div>
                                                    <a class="transparent_btn orange pull-right btnClipboard" href="https://link.clashroyale.com/?joinTournament?id= @tournament.TournamentRight.tag" role="button">Join</a>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        }
                    </div>
                }
            }
            <a class="btn orange" role="button" href="../Tournament/Search"><span class="glyphicon glyphicon-search"></span> FIND ME TOURNAMENT</a>
        </div>
    </div>
</div>

