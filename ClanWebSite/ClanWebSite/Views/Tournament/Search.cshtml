@{
    ViewBag.Title = "Search";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@Styles.Render("~/Content/spinner")
<div class="tournament" id="tournament">
    <div class="container">
        <div id="spinner" class="spinner-wrapper container">
            <div class="cssload-square">
                <div><div><div><div><div></div></div></div></div></div>
                <div><div><div><div><div></div></div></div></div></div>
            </div>
            <div class="cssload-square cssload-two">
                <div><div><div><div><div></div></div></div></div></div>
                <div><div><div><div><div></div></div></div></div></div>
            </div>
        </div>
        <div id="tournamentDetails" class="tournament-info" style="display: none">
            <h1><span id="tournamentName"></span></h1>
            <button id="btnCopy" class="transparent_btn orange pull-right btnClipboard" data-clipboard-text="asd@*@Model.name*@">Copy</button>
            <h3><span id="tournamentDescription"></span></h3>
            <h3><span id="tournamentStarted"></span></h3>
            <div class="row">
                <div class="text-center col-md-4">
                    <div class="tournament-details ">
                        <i class="far fa-clock"></i>
                        <h2>
                            <span id="tournamentStatus"></span> @*@Model.type*@
                        </h2>
                    </div>
                </div>
                <div class="text-center col-md-4">
                    <div class="tournament-details">
                        <i class=" fas fa-lock-open" aria-hidden="true"></i>
                        <h2>
                            <span id="tournamentType"></span> @*@Model.type*@
                        </h2>
                    </div>
                </div>
                <div class="text-center col-md-4">
                    <div class="tournament-details">
                        <i class="fa fa-users" aria-hidden="true"></i>
                        <h2>
                            <span id="tournamentPlayerCount"></span><span>/</span><span id="tournamentMaxCapacity"></span>
                        </h2>
                    </div>
                </div>
            </div>
            <h2><span id="tournamentTag"></span> @*@Model.tag*@ </h2>

        </div>
    </div>
</div>
@section scripts
{
    <script type="text/javascript" src="@Url.Content("/Scripts/CustomScripts/tournaments.js")"></script>    
}
@Scripts.Render(" ~/bundles/tournaments")